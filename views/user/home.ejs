<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User</title>
  <style>
    .nav-link{
        font-size: 18px;
        font-weight:600;
        text-align: center;
        padding:10px;
        color:gray;
    }
    .nav-item > .active{
        color:#15AAFF !important;
    }
  </style>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg sticky-top" style="background:white;box-shadow:1px 1px 2px #aaa;">
    <div class="container">
        <a class="navbar-brand  text-primary" style="font-weight:800;font-size:32px" href="">
            User
        </a>
        <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/home">Home</a>
                </li>
                <li class="nav-item dropdown text-center">
                    <a class="nav-link dropdown-toggle text-secondary" href="#" role="button" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                        Profile
                    </a>
                    <ul class="dropdown-menu text-center">
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
  </nav>

<div data-bs-toggle="modal" data-bs-target="#myModal" type="button" style="font-weight:900;position:fixed;bottom:20px;width:50px;height:50px;right:30px;font-size: 30px;color:#fff;padding:20px;border-radius: 100%;display:flex;justify-content: center;align-items: center;" class="btn bg-primary"><span>+</span></div>

<div class="container mx-auto mt-4">
    <p class="text-secondary">Welcome, <span class="text-primary"><%= email %></span></p>
</div>

<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="color:#2b74e2">Upload File</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form action="/upload" method="post" enctype='multipart/form-data'>
                    <div class="form-floating mb-3 ">
                        <input required type="text" class="form-control"  name="title" placeholder="Title">
                        <label>Title</label>
                    </div>
                    <div class="form-floating mb-3 ">
                        <input required type="file" class="form-control"  name="file" placeholder="Upload File">
                        <label>Upload File</label>
                    </div>
                    <div style="display:flex;justify-content:flex-end">
                        <button class="btn  w-25" style="background-color:#2b74e2;color:#fff">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="container table-responsive">        
    <table class="table table-striped table-bordered">
        <thead style="text-align:center">
            <tr>
                <th style="width:100px">#</th>
                <th>Title</th>
                <th>File</th>
                <th style="width:150px">Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (rows.length > 0){%>
                <% rows.map((row)=>{ %>
                <tr>
                    <td style="text-align:center">1</td>
                    <td><%= row['title'] %></td>
                    <td><a href="/<%= row['file'] %>" target="_blank">Click here</a></td>
                    <td>
                        <form action="/delete" method="post">
                            <input type="hidden" name="id" value="<%= row['id'] %>">
                            <center>
                                <button class="btn btn-danger w-75">Delete</button>
                            </center>   
                        </form>
                    </td>
                </tr>
                <% }) %>
            <%}else{%>
                <tr>
                    <td style="text-align:center" colspan="5">Nothing Found</td>
                </tr>
            <%}%>
        </tbody>
    </table>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>